<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<!--
    put this in your ~/Library/LaunchAgents
    and run launchctl load ~/Library/LaunchAgents
-->
<plist version="1.0">
<dict>
        <key>KeepAlive</key>
        <dict>
                <key>PathState</key>
                <dict>
                        <key>/Volumes</key>
                        <true/>
                </dict>
        </dict>
        <key>Label</key>
        <string>name.franxman.kindle_sync</string>
        <key>Program</key>
        <string>/Users/franxman/bin/kindle_sync.sh</string>
        <key>StartInterval</key>
        <integer>30</integer>
        <key>ThrottleInterval</key>
        <integer>60</integer>
        <key>WorkingDirectory</key>
        <string>/Users/franxman/</string>
</dict>
</plist>

